<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_change_password_background">


    <TextView
        android:id="@+id/popup_add_question_question_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_new_peer_review_question_label"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <EditText
        android:id="@+id/popup_add_question_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/add_announcement_edit_text_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/popup_add_question_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_announcement_cancel_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginStart="220dp"/>

        <Button
            android:id="@+id/popup_add_question_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_new_peer_review_confirm_add_question_button"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
</LinearLayout>